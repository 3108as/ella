#!/bin/bash

set -e

case "$1" in
    configure)

    # symlink for original django templates
    ELLA_ADMIN_PATH='/usr/share/python-support/centrum-ella/ella/ellaadmin'
    DJANGO_ADMIN_PATH='/usr/share/python-support/centrum-django/django/contrib/admin'
    cd $ELLA_ADMIN_PATH/templates
    [[ -L admin_orig ]] || ln -s $DJANGO_ADMIN_PATH/templates/admin admin_orig

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

# prepare .pyo files as well
if [ "$1" = "configure" ] && which py_compilefiles >/dev/null 2>&1; then
	APP='ella'
	INST_DIR='/var/lib/python-support/python2.4/'$APP
	PYCOMPILE=$( which py_compilefiles )
	find $INST_DIR -name '*.py' | xargs python -O $PYCOMPILE -q
fi

exit 0

