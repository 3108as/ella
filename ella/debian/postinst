#!/bin/bash

set -e

case "$1" in
    configure)

    # symlink for original django templates
    ELLA_ADMIN_PATH='/usr/share/python-support/centrum-ella/ella/ellaadmin'
    DJANGO_ADMIN_PATH='/usr/share/python-support/centrum-django/django/contrib/admin'
    cd $ELLA_ADMIN_PATH/templates
    [[ -L admin_orig ]] || ln -s $DJANGO_ADMIN_PATH/templates/admin admin_orig

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

